@model List<WorkingWomenApp.Database.Models.Users.SecurityRole>
@{
    Layout = "_LayoutDashboard";
}

<div class="col-md-12">
    <a asp-controller="SecurityRole" asp-action="EditRole" name="add" id="add" class="btn btn-primary btn-lg">Add Role</a>
</div>


<table class="content-table table ">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Actions</th>
    
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>1</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary btn-icon" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></a>
                @*                 <a href="javascript:void(0)" onclick="showDetails(@item.Id, 'Clients')" class="btn btn-primary btn-icon" data-toggle="tooltip" title="Details"><i class="fa fa-bars"></i></a>
                <a href="javascript:void(0)" onclick="deleteItem(@item.Id)" class="btn btn-danger btn-icon" data-toggle="tooltip" title="Delete"><i class="fa fa-trash"></i></a> *@
            </td>
         
        </tr>
    }
    

    </tbody>
</table>

