@using WorkingWomenApp.Database.Models
@model WorkingWomenApp.Database.DTOs.ViewModels.UserProfileDtos
@{
}
<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="form-card">
            <div class="brand">

                <h1>Profile</h1>
                <p>We want to know you to customise your experience</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form id="signUpForm" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.UserId)
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.IsMother, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.Profession,
                            new SelectList(Enum.GetValues(typeof(Profession))),
                            "Select a category",
                            new { @class = "form-control" }))

                        @Html.ValidationMessageFor(model => model.IsMother, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.IsMother, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.Profession,
                            new SelectList(Enum.GetValues(typeof(Profession))),
                            "Select a category",
                            new { @class = "form-control" }))

                        @Html.ValidationMessageFor(model => model.IsMother, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.IsBreastfeeding, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.RadioButtonFor(model => model.IsBreastfeeding, new { htmlAttributes = new { @class = "form-control", placeholder = "Suzan" } })
                        @Html.ValidationMessageFor(model => model.IsBreastfeeding, "", new { @class = "text-danger" })

                    </div>
                  
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.IsMother, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.Profession,
                                 new SelectList(Enum.GetValues(typeof(Profession))),
                                 "Select a category",
                                 new { @class = "form-control" }))

                        @Html.ValidationMessageFor(model => model.IsMother, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.IsPregnant, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.IsPregnant, new { htmlAttributes = new { @class = "form-control", rows = 4, cols = 50 } })
                        @Html.ValidationMessageFor(model => model.IsPregnant, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.NumberOfChidren, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.NumberOfChidren, new { htmlAttributes = new { @class = "form-control", rows = 4, cols = 50 } })
                        @Html.ValidationMessageFor(model => model.NumberOfChidren, "", new { @class = "text-danger" })

                    </div>
                </div>
                

                <div class="d-grid gap-2  mx-auto">
                    <button type="submit" class=" btn primary-btn" id="SaveButton">
                       Save
                    </button>
                </div>



            </form>



            <div class="signup-link">
                <p>Have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
            </div>
        </div>
    </div>

</div>
