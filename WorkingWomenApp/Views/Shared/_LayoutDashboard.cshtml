    <link href='https://fonts.googleapis.com/css?family=Bitter' rel='stylesheet'>

</head>
<body>
<div id="header"> 
    <div class="header uboxed">
        <ul class="logo">
            <li>
               @*  <img src="https://byjaris.com/img/byjaris.svg" alt="Fimanbol"> *@
              
                    <div >Her<span style="color:#49AA97;">Climate</span></div>
              
            </li>
        </ul>
        <ul class="menu">
            <li><img src="https://byjaris.com/code/icons/home-alt.svg" alt="Fimanbol"></li>
            <li><img src="https://byjaris.com/code/icons/menu-alt.svg" alt="Fimanbol"></li>
          
            
        </ul>
        <ul class="menu-list">
            <li><a href=""><i class="fa fa-bell fa-2xl" aria-hidden="true"></i><span class="notification-number">99</span></a></li>
            <li><a href=""><i class="fa fa-tachometer fa-2xl" aria-hidden="true"></i></a></li>
            <li><a href=""><i class="fa fa-volume-down fa-2xl" aria-hidden="true"></i></a></li>
        </ul>
        <div class="profile">
            <img
                src="https://avatars.githubusercontent.com/u/83676505?v=4"
                alt="profile image"
            />
        </div>
    </div>
</div>
<div class="all">
    <!-- ====== Navbar Section Start -->

    <nav class="side-nav">
        <div class="logo">
            <div >Her<span style="color:#49AA97;">Climate</span></div>
        </div>
        <ul class="nav-menu mt-5">

                <li class="nav-item active"><a asp-controller="Home" asp-action="Dashboard"><i class="fa-regular fa-house"></i><span class="menu-text">Dashboard</span></a></li>
                <li class="nav-item"><a asp-controller="Climate" asp-action="Index"><i class="fa-solid fa-notes-medical"></i><span class="menu-text">Health Info</span></a></li>
                <li class="nav-item "><a asp-controller="Climate" asp-action="Index"><i class="fa-solid fa-cloud-meatball"></i><span class="menu-text">Climate Info</span></a></li>
                <li class="nav-item"><a asp-controller="" asp-action=""><i class="fas fa-play "></i><span class="menu-text">Child care</span></a></li>
                <li class="nav-item"><a asp-controller="" asp-action=""><i class="fas fa-sign-out-alt"></i><span class="menu-text">exit</span></a></li>
        </ul>
    </nav>



    <!-- ====== Navbar Section End -->
    <div class="content">

        <div class="header-space"></div>
        


            <main>
                @RenderBody()
            </main>
       
    </div>




</div>
<!-- ====== Footer Section Start -->


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/fontawesome/js/all.min.js" asp-append-version="true"></script>
<script src="~/fontawesome/js/brands.min.js" asp-append-version="true"></script>
<script src="~/fontawesome/js/fontawesome.min.js" asp-append-version="true"></script>
<script src="~/fontawesome/js/regular.min.js" asp-append-version="true"></script>
<script src="~/fontawesome/js/solid.min.js" asp-append-version="true"></script>
<script>
        $(function() {
                $("li").click(function(e) {
                  e.preventDefault();
                  $("li").removeClass("active");
                  $(this).addClass("active");
                });
            });
</script>


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
